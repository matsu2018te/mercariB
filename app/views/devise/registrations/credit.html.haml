.single-container
  %header.single-header
    = render 'devise/shared/header'
    %nav.signup-bar
      %ul.progress-bar
        %li
          会員情報
          %br
          .circle--first.circle--red.circle--through
        %li
          電話番号認証
          %br
          .circle.circle--red.circle--through
        %li
          住所入力
          %br
          .circle.circle--red.circle--through
        %li
          支払い方法
          %br
          .circle.circle--red
        %li
          完了
          %br
          .circle--last

  %main.single-main
    .signup-panel
      %h2.signup-panel__head 会員情報入力
      = form_for(:session, url: signup_completed_path ) do |f|
        .form
          = f.label :card_number, "カード番号"
          %span.form-require 必須
          = f.text_field :card_number, autofocus: true, required:"", class: "form__input"

        .form
          = f.label :expiration_date, "有効期限"
          %span.form-require 必須
          %br
          .num_wrap
            .select-wrap
              = f.select :expiration_month, options_for_select(1..12), {}, { class: "form__select" }
            月
          %br
          .num_wrap
            .select-wrap
              = f.select :expiration_year, options_for_select(@years), {}, { class: "form__select" }
            年
        .form
          = f.label :security_code, "セキュリティコード"
          %span.form-require 必須
          = f.text_field :security_code, required:"", class: "form__input"
          = f.submit "次へ進む", class: "btn btn__red"

  = render "devise/shared/footer"
